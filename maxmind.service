[Unit]
Description=MaxMind GeoIP API Service
After=network.target

[Service]
Type=simple
User=maxmind
Group=maxmind
WorkingDirectory=/opt/maxmind
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/maxmind/venv/bin/python /opt/maxmind/main.py
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 